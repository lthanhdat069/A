--- JackUiPremium Dark Fade v3
-- Click avatar g√≥c ph·∫£i tr√™n ƒë·ªÉ b·∫≠t/t·∫Øt menu
-- Tabs ngang + ch·ªØ xanh nh·∫°t, vi·ªÅn cong, fade m∆∞·ª£t
-- Sol built

repeat task.wait() until game:IsLoaded()

-- ========================
-- CONFIG
-- ========================
local Config = {
    GuiName = "JackUiPremiumDark_v3",
    AvatarButtonId = "103173399598412", -- ID m·∫∑c ƒë·ªãnh cho avatar
    WindowTitle = "Jack Hub üíé",
    WindowSubTitle = "Script vip x·ªãn nh·∫•t t·ª´ Jack",
    ThemeColor = Color3.fromRGB(40,45,55), -- m√†u Dark
    TextColor = Color3.fromRGB(155,210,255), -- ch·ªØ xanh nh·∫°t
    WindowWidth = 650,
    WindowHeight = 400,
    TabHeight = 48,
    FadeTime = 0.28,
    CornerRadius = 12
}

-- ========================
-- RAW SCRIPT PLACEHOLDERS
-- ========================
local UserScripts = {
    Fly = "",        -- d√°n raw URL Fly Skill
    Invisible = ""   -- d√°n raw URL Invisible Skill
}

-- ========================
-- SERVICES
-- ========================
local CoreGui = game:GetService("CoreGui")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")

-- ========================
-- UTILS
-- ========================
local function mk(parent, class, props)
    local obj = Instance.new(class)
    if props then for k,v in pairs(props) do obj[k] = v end end
    obj.Parent = parent
    return obj
end

local function tween(obj, props, t)
    return TweenService:Create(obj, TweenInfo.new(t or Config.FadeTime, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), props)
end

local function safeLoad(url)
    if url == "" or not url then warn("Ch∆∞a c√≥ URL script."); return false end
    local ok, res = pcall(function() return loadstring(game:HttpGet(url, true))() end)
    if not ok then warn("Script l·ªói:", res) end
    return ok
end

-- ========================
-- CLEANUP OLD GUI
-- ========================
if CoreGui:FindFirstChild(Config.GuiName) then CoreGui[Config.GuiName]:Destroy() end

-- ========================
-- MAIN SCREEN GUI
-- ========================
local ScreenGui = mk(CoreGui, "ScreenGui",{Name = Config.GuiName, ResetOnSpawn=false,ZIndexBehavior=Enum.ZIndexBehavior.Sibling})

-- BACKDROP
local Backdrop = mk(ScreenGui,"Frame",{
    BackgroundColor3 = Color3.new(0,0,0),
    BackgroundTransparency = 1,
    Size=UDim2.new(1,0,1,0),
    ZIndex=1,
    Visible=false
})

-- MAIN WINDOW
local Window = mk(ScreenGui,"Frame",{
    Size=UDim2.new(0,Config.WindowWidth,0,Config.WindowHeight),
    Position=UDim2.new(0.5,0,-1,0), -- ban ƒë·∫ßu offscreen tr√™n
    AnchorPoint=Vector2.new(0.5,0.5),
    BackgroundColor3=Config.ThemeColor,
    ZIndex=2
})
mk(Window,"UICorner",{CornerRadius=UDim.new(0,Config.CornerRadius)})

-- TITLE
local Title = mk(Window,"TextLabel",{
    Text=Config.WindowTitle,
    Font=Enum.Font.GothamBold,
    TextSize=20,
    TextColor3=Config.TextColor,
    BackgroundTransparency=1,
    Position=UDim2.new(0.03,0,0.02,0),
    Size=UDim2.new(0.7,0,0.15,0),
    TextXAlignment=Enum.TextXAlignment.Left
})
local SubTitle = mk(Window,"TextLabel",{
    Text=Config.WindowSubTitle,
    Font=Enum.Font.Gotham,
    TextSize=12,
    TextColor3=Config.TextColor,
    BackgroundTransparency=1,
    Position=UDim2.new(0.03,0,0.18,0),
    Size=UDim2.new(0.7,0,0.1,0),
    TextXAlignment=Enum.TextXAlignment.Left
})

-- CLOSE BUTTON
local CloseBtn = mk(Window,"TextButton",{
    Text="X",
    Font=Enum.Font.GothamBold,
    TextSize=16,
    TextColor3=Config.TextColor,
    BackgroundColor3=Color3.fromRGB(50,50,60),
    Position=UDim2.new(0.94,0,0.02,0),
    Size=UDim2.new(0,30,0,30)
})
mk(CloseBtn,"UICorner",{CornerRadius=UDim.new(0,6)})

-- TABS
local TabsBar = mk(Window,"Frame",{
    BackgroundTransparency=1,
    Position=UDim2.new(0,0,0.3,0),
    Size=UDim2.new(1,0,0,Config.TabHeight)
})
local TabsLayout = mk(TabsBar,"UIListLayout",{FillDirection=Enum.FillDirection.Horizontal,SortOrder=Enum.SortOrder.LayoutOrder,Padding=UDim.new(0,6)})

local ContentContainer = mk(Window,"Frame",{
    BackgroundTransparency=1,
    Position=UDim2.new(0,12,0.3+Config.TabHeight/Config.WindowHeight,0),
    Size=UDim2.new(1,-24,1,-(Config.TabHeight+54))
})

local function createTabButton(name)
    local btn = mk(TabsBar,"TextButton",{Size=UDim2.new(0,110,0,Config.TabHeight),Text=name,Font=Enum.Font.Gotham,TextColor3=Config.TextColor,BackgroundColor3=Color3.fromRGB(30,36,45)})
    mk(btn,"UICorner",{CornerRadius=UDim.new(0,8)})
    return btn
end

local tabNames = {"Main","Skill","Info","Settings"}
local tabButtons = {}
local contentFrames = {}
for i,name in ipairs(tabNames) do
    local btn = createTabButton(name)
    btn.LayoutOrder = i
    tabButtons[name] = btn
    local fr = mk(ContentContainer,"Frame",{BackgroundTransparency=1,Size=UDim2.new(1,0,1,0),Visible=false})
    mk(fr,"UIListLayout",{FillDirection=Enum.FillDirection.Vertical,VerticalAlignment=Enum.VerticalAlignment.Top,Padding=UDim.new(0,8)})
    contentFrames[name] = fr
end

local currentTab = nil
local function showTab(name)
    if currentTab then contentFrames[currentTab].Visible=false end
    contentFrames[name].Visible=true
    currentTab=name
end

for name,btn in pairs(tabButtons) do
    btn.MouseButton1Click:Connect(function() showTab(name) end)
end

showTab("Main")

-- FUNCTION BUTTON UTILS
local function createFuncButton(parent,title,desc,callback)
    local btn = mk(parent,"TextButton",{Text="",BackgroundColor3=Color3.fromRGB(36,44,56),Size=UDim2.new(1,0,0,44)})
    mk(btn,"UICorner",{CornerRadius=UDim.new(0,8)})
    local t = mk(btn,"TextLabel",{Text=title,TextColor3=Config.TextColor,Font=Enum.Font.GothamBold,TextSize=16,BackgroundTransparency=1,Position=UDim2.new(0.03,0,0,0),Size=UDim2.new(0.6,0,1,0),TextXAlignment=Enum.TextXAlignment.Left})
    local d = mk(btn,"TextLabel",{Text=desc,TextColor3=Config.TextColor,Font=Enum.Font.Gotham,TextSize=12,BackgroundTransparency=1,Position=UDim2.new(0.03,0,0.5,0),Size=UDim2.new(0.95,0,0.5,0),TextXAlignment=Enum.TextXAlignment.Left})
    btn.MouseButton1Click:Connect(function()
        tween(btn,{BackgroundColor3=Color3.fromRGB(50,60,76)},0.08):Play()
        task.delay(0.08,function() tween(btn,{BackgroundColor3=Color3.fromRGB(36,44,56)},0.12):Play() end)
        pcall(callback)
    end)
    return btn
end

-- ========================
-- FILL CONTENT
-- ========================
-- Skill tab
do
    local fr = contentFrames["Skill"]
    createFuncButton(fr,"Fly Skill","Ch·ªó ƒë·ªÉ d√°n raw Fly Skill",function()
        safeLoad(UserScripts.Fly)
    end)
    createFuncButton(fr,"Invisible Skill","Ch·ªó ƒë·ªÉ d√°n raw Invisible Skill",function()
        safeLoad(UserScripts.Invisible)
    end)
end

-- ========================
-- OPEN/CLOSE MENU
-- ========================
local AvatarBtn = mk(ScreenGui,"ImageButton",{
    Size=UDim2.new(0,48,0,48),
    Position=UDim2.new(1,-60,0,10), -- ph·∫£i tr√™n
    BackgroundColor3=Color3.fromRGB(0,0,0),
    BackgroundTransparency=0.25,
    BorderSizePixel=0,
    Image="http://www.roblox.com/asset/?id="..Config.AvatarButtonId
})
mk(AvatarBtn,"UICorner",{CornerRadius=UDim.new(1,10)})

local menuOpen = false
local function openMenu()
    Backdrop.Visible=true
    tween(Backdrop,{BackgroundTransparency=0.6},Config.FadeTime):Play()
    tween(Window,{Position=UDim2.new(0.5,0,0.5,0)},Config.FadeTime):Play()
end
local function closeMenu()
    tween(Backdrop,{BackgroundTransparency=1},Config.FadeTime):Play()
    tween(Window,{Position=UDim2.new(0.5,0,-1,0)},Config.FadeTime):Play()
    task.delay(Config.FadeTime,function() Backdrop.Visible=false end)
end
AvatarBtn.MouseButton1Click:Connect(function()
    if menuOpen then closeMenu() else openMenu() end
    menuOpen = not menuOpen
end)
CloseBtn.MouseButton1Click:Connect(function()
    closeMenu()
    menuOpen=false
end)
Backdrop.InputBegan:Connect(function(input)
    if input.UserInputType==Enum.UserInputType.MouseButton1 and menuOpen then
        closeMenu()
        menuOpen=false
    end
end)

print("JackUiPremium Dark Fade v3 loaded. D√°n raw Fly/Invisible v√†o UserScripts table.")